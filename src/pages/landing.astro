---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { supabase } from "../lib/supabase";

// Fetch Topics for Side Menu verify
const { data: topics, error } = await supabase
  .from("topics")
  .select("*")
  .order("name");

if (error) {
  console.error("Error fetching topics:", error);
}
---

<Layout title="ZVENIA - The Community for Mining Professionals">
  <Header />

  <div class="flex min-h-screen">
    <!-- Sidebar Topics Test -->
    <aside
      class="hidden lg:block w-64 bg-neutral-900 border-r border-white/5 p-6 overflow-y-auto max-h-screen sticky top-0"
    >
      <h3 class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-4">
        Topics
      </h3>
      <ul class="space-y-1">
        {
          topics?.map((topic) => (
            <li>
              <a
                href={`/mining/${topic.slug}`}
                class="block py-2 px-3 text-sm text-gray-400 hover:text-primary-400 hover:bg-white/5 rounded transition-colors duration-200"
              >
                {topic.name}
              </a>
            </li>
          ))
        }
      </ul>
    </aside>

    <main class="flex-1">
      <!-- Hero Section -->
      <section
        class="relative pt-32 pb-20 lg:pt-48 lg:pb-32 overflow-hidden bg-black"
      >
        <!-- Background Gradient/Effect -->
        <div class="absolute inset-0 z-0">
          <!-- Slight Green Glow -->
          <div
            class="absolute top-0 right-0 w-3/4 h-[600px] bg-primary-900/20 blur-[120px] rounded-full pointer-events-none"
          >
          </div>
        </div>

        <div
          class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center"
        >
          <h1
            class="text-5xl lg:text-7xl font-bold tracking-tight text-white mb-6"
          >
            Connecting the Future of <br class="hidden md:block" />
            <span
              class="text-transparent bg-clip-text bg-gradient-to-r from-primary-400 to-primary-600"
              >Professional Mining</span
            >
          </h1>
          <p
            class="text-xl text-gray-400 max-w-2xl mx-auto mb-10 leading-relaxed"
          >
            Join the largest community of mining experts. Access exclusive
            resources, live events, and connect with global leaders.
          </p>

          <div
            class="flex flex-col sm:flex-row gap-4 justify-center items-center"
          >
            <!-- Primary CTA Green -->
            <a
              href="/register"
              class="w-full sm:w-auto px-8 py-4 text-base font-bold text-black bg-primary-400 hover:bg-primary-500 rounded transition-all shadow-lg shadow-primary-500/25"
            >
              Start for Free
            </a>
            <!-- Secondary CTA -->
            <a
              href="/about"
              class="w-full sm:w-auto px-8 py-4 text-base font-semibold text-gray-300 hover:text-white hover:bg-white/5 border border-white/10 rounded transition-all"
            >
              Learn More
            </a>
          </div>
        </div>
      </section>

      <!-- Feature Grid -->
      <section class="py-24 bg-neutral-900 border-t border-white/5">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Card 1 -->
            <div
              class="p-8 rounded-lg bg-black border border-white/10 hover:border-primary-500/50 transition-colors group"
            >
              <div
                class="w-12 h-12 bg-primary-900/30 rounded flex items-center justify-center mb-6 text-primary-400 group-hover:text-primary-300"
              >
                <svg
                  class="w-6 h-6"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"
                  ></path></svg
                >
              </div>
              <h3 class="text-xl font-bold text-white mb-3">
                Z-Talks & Podcasts
              </h3>
              <p class="text-gray-400">
                Deep conversations with leaders who are transforming the global
                mining industry.
              </p>
            </div>

            <!-- Card 2 -->
            <div
              class="p-8 rounded-lg bg-black border border-white/10 hover:border-primary-500/50 transition-colors group"
            >
              <div
                class="w-12 h-12 bg-primary-900/30 rounded flex items-center justify-center mb-6 text-primary-400 group-hover:text-primary-300"
              >
                <svg
                  class="w-6 h-6"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                  ></path></svg
                >
              </div>
              <h3 class="text-xl font-bold text-white mb-3">
                Exclusive Events
              </h3>
              <p class="text-gray-400">
                Access to specialized webinars, conferences, and high-level
                networking.
              </p>
            </div>

            <!-- Card 3 -->
            <div
              class="p-8 rounded-lg bg-black border border-white/10 hover:border-primary-500/50 transition-colors group"
            >
              <div
                class="w-12 h-12 bg-primary-900/30 rounded flex items-center justify-center mb-6 text-primary-400 group-hover:text-primary-300"
              >
                <svg
                  class="w-6 h-6"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                  ></path></svg
                >
              </div>
              <h3 class="text-xl font-bold text-white mb-3">
                Global Community
              </h3>
              <p class="text-gray-400">
                Connect with thousands of professionals, share knowledge, and
                find new opportunities.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Accent Banner -->
      <section class="py-12 bg-accent-400 text-black">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <h2 class="text-3xl font-bold mb-4">Preview of ZVENIA Mining</h2>
          <p class="text-lg font-medium opacity-90">
            Join today and access world-class content.
          </p>
        </div>
      </section>

      <Footer />
    </main>
  </div>
</Layout>
