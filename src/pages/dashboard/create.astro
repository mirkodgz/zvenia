---
import SocialLayout from "../../layouts/SocialLayout.astro";
import LeftSidebar from "../../components/social/LeftSidebar.astro";
import CreateContent from "../../components/dashboard/forms/CreateContent";

const { user } = Astro.locals;

if (!user) {
    return Astro.redirect("/login");
}
---

<SocialLayout title="Creator Studio | ZVENIA" hideRightSidebar={true}>
    <LeftSidebar slot="left-sidebar" />

    <div class="max-w-5xl mx-auto px-4 py-8">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-2xl font-bold text-dark mb-2">Creator</h1>
            <p class="text-gray-600">
                Share your knowledge with the professional mining community.
            </p>
        </div>

        <!-- Main Content app -->
        <div
            class="bg-white border border-gray-200 rounded-lg overflow-hidden shadow-sm"
        >
            <CreateContent client:load currentUser={user} />
        </div>
    </div>
</SocialLayout>
