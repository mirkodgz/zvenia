---
import SocialLayout from "../../layouts/SocialLayout.astro";
import LeftSidebar from "../../components/social/LeftSidebar.astro";
import { createSupabaseServerClient } from "../../lib/supabase";

const { slug } = Astro.params;

const supabase = createSupabaseServerClient({
    req: Astro.request,
    cookies: Astro.cookies,
});

// Fetch Event Data with Relations
const { data: event, error } = await supabase
    .from("events")
    .select(
        `
        *,
        type:event_types(name, slug),
        language:event_languages(name, code),
        format:event_formats(name, slug),
        price:event_prices(name, slug)
    `,
    )
    .eq("slug", slug as string)
    .single();

if (error || !event) {
    return Astro.redirect("/404");
}

// Format Dates
const formatDate = (dateStr: string | null) => {
    if (!dateStr) return "";
    return new Date(dateStr).toLocaleDateString("en-US", {
        weekday: "long",
        year: "numeric",
        month: "long",
        day: "numeric",
    });
};

// Cast to any to avoid 'never' type inference issues
const eventData = event as any;
---

<SocialLayout title={eventData.title} hideRightSidebar={true}>
    <!-- Left Sidebar (Injected via Layout Slot) -->
    <LeftSidebar slot="left-sidebar" />

    <!-- Main Content Area (Full Width right of Global Left Sidebar) -->
    <div class="w-full max-w-[1600px] mx-auto pb-20 px-6">
        {/* Back Link */}
        <div class="mb-6">
            <a
                href="/"
                class="text-sm font-bold text-gray-500 hover:text-primary-600 flex items-center gap-1 transition-colors uppercase tracking-wider"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-4 w-4"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to Feed
            </a>
        </div>

        {/* HERO / COVER SECTION (Wider & Shorter) */}
        <div
            class="relative w-full h-[320px] bg-gray-100 overflow-hidden mb-8 border border-gray-200 shadow-sm"
        >
            {
                eventData.cover_photo_url ? (
                    <img
                        src={eventData.cover_photo_url}
                        alt={eventData.title}
                        class="w-full h-full object-cover"
                    />
                ) : (
                    <div class="w-full h-full flex items-center justify-center bg-gray-100 text-gray-400">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="w-20 h-20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <>
                                <rect x="3" y="4" width="18" height="18" />
                                <line x1="16" y1="2" x2="16" y2="6" />
                                <line x1="8" y1="2" x2="8" y2="6" />
                                <line x1="3" y1="10" x2="21" y2="10" />
                            </>
                        </svg>
                    </div>
                )
            }
        </div>

        {/* 2-Column Grid: Title/Desc (Left) + Info (Right) */}
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-10">
            {/* LEFT COLUMN: Main Info (8/12 - approx 66%) */}
            <div class="lg:col-span-8 space-y-8">
                <div>
                    {/* Badges (Dark Style) */}
                    <div class="flex flex-wrap gap-3 mb-5">
                        {
                            eventData.type && (
                                <span class="bg-[#002b1b] text-white px-4 py-1.5 text-xs font-bold uppercase tracking-wider flex items-center gap-2">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="w-3.5 h-3.5"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <rect
                                            x="3"
                                            y="4"
                                            width="18"
                                            height="18"
                                            rx="0"
                                            ry="0"
                                        />
                                        <line x1="16" y1="2" x2="16" y2="6" />
                                        <line x1="8" y1="2" x2="8" y2="6" />
                                        <line x1="3" y1="10" x2="21" y2="10" />
                                    </svg>
                                    {eventData.type.name}
                                </span>
                            )
                        }
                        {
                            eventData.language && (
                                <span class="bg-[#002b1b] text-white px-4 py-1.5 text-xs font-bold uppercase tracking-wider flex items-center gap-2">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="w-3.5 h-3.5"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <circle cx="12" cy="12" r="10" />
                                        <line x1="2" y1="12" x2="22" y2="12" />
                                        <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z" />
                                    </svg>
                                    {eventData.language.name}
                                </span>
                            )
                        }
                    </div>

                    <h1
                        class="text-[40px] font-black text-gray-900 leading-none mb-8 tracking-tight"
                    >
                        {eventData.title}
                    </h1>

                    <div
                        class="prose prose-lg prose-gray max-w-none text-gray-700 leading-relaxed whitespace-pre-line prose-headings:font-bold prose-headings:text-gray-900"
                    >
                        {eventData.description}
                    </div>
                </div>
            </div>

            {/* RIGHT COLUMN: Info Sidebar (4/12 - approx 33%) - DARK THEME */}
            <div class="lg:col-span-4 space-y-0">
                {/* Combined Dark Card */}
                <div
                    class="bg-linear-to-br from-[#003d29] to-[#00180f] text-white p-8 shadow-lg relative overflow-hidden group"
                >
                    {
                        /* Subtle decorative glow (optional, adds "striking" feel) */
                    }
                    <div
                        class="absolute top-0 right-0 w-64 h-64 bg-white/5 rounded-full blur-3xl -mr-32 -mt-32 pointer-events-none"
                    >
                    </div>

                    {/* Organizer Section */}
                    <div class="mb-8">
                        <h3
                            class="text-white font-bold text-sm uppercase tracking-widest mb-4 border-b border-[#1a553c] pb-2"
                        >
                            Organizer
                        </h3>
                        <div class="space-y-3">
                            {
                                eventData.organizer && (
                                    <p class="text-white font-bold text-lg">
                                        {eventData.organizer}
                                    </p>
                                )
                            }
                            {
                                eventData.organizer_email && (
                                    <a
                                        href={`mailto:${eventData.organizer_email}`}
                                        class="flex items-center gap-3 text-sm text-gray-300 hover:text-white transition-colors"
                                    >
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            class="w-4 h-4"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                        >
                                            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                                            <polyline points="22,6 12,13 2,6" />
                                        </svg>
                                        {eventData.organizer_email}
                                    </a>
                                )
                            }
                        </div>
                    </div>

                    <div class="border-t border-[#1a553c] my-6"></div>

                    {/* Official Link */}
                    {
                        eventData.external_link && (
                            <div class="mb-8">
                                <h3 class="text-white font-bold text-sm uppercase tracking-widest mb-2">
                                    Official Link
                                </h3>
                                <a
                                    href={eventData.external_link}
                                    target="_blank"
                                    rel="noopener"
                                    class="flex items-center gap-2 text-[#00c54f] hover:text-[#00e05a] w-fit font-semibold text-sm transition-colors break-all"
                                >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="w-4 h-4 shrink-0"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <circle cx="12" cy="12" r="10" />
                                        <line x1="2" y1="12" x2="22" y2="12" />
                                        <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z" />
                                    </svg>
                                    Visit Website
                                </a>
                            </div>
                        )
                    }

                    <div class="border-t border-[#1a553c] my-6"></div>

                    {/* Location, Date & Time */}
                    <div class="space-y-6">
                        <h3
                            class="text-white font-bold text-sm uppercase tracking-widest mb-2"
                        >
                            Location, Date & Time
                        </h3>

                        {/* Location */}
                        <p
                            class="text-white font-medium text-base flex items-start gap-3"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="w-5 h-5 text-gray-300 mt-0.5 shrink-0"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                            >
                                <path
                                    d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"
                                ></path>
                                <circle cx="12" cy="10" r="3"></circle>
                            </svg>
                            {eventData.location || "Online"}
                        </p>

                        {/* Date */}
                        <p
                            class="text-white font-medium text-base flex items-start gap-3"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="w-5 h-5 text-gray-300 mt-0.5 shrink-0"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                            >
                                <rect
                                    x="3"
                                    y="4"
                                    width="18"
                                    height="18"
                                    rx="0"
                                    ry="0"></rect>
                                <line x1="16" y1="2" x2="16" y2="6"></line>
                                <line x1="8" y1="2" x2="8" y2="6"></line>
                                <line x1="3" y1="10" x2="21" y2="10"></line>
                            </svg>
                            {formatDate(eventData.start_date)}
                            {
                                eventData.end_date &&
                                    ` - ${formatDate(eventData.end_date)}`
                            }
                        </p>

                        {/* Time */}
                        {
                            eventData.start_time && (
                                <p class="text-white font-medium text-base flex items-start gap-3">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="w-5 h-5 text-gray-300 mt-0.5 shrink-0"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <circle cx="12" cy="12" r="10" />
                                        <polyline points="12 6 12 12 16 14" />
                                    </svg>
                                    {eventData.start_time}
                                </p>
                            )
                        }
                    </div>

                    <div class="border-t border-[#1a553c] my-6"></div>

                    {/* Price */}
                    <div>
                        <h3
                            class="text-white font-bold text-sm uppercase tracking-widest mb-3"
                        >
                            Price
                        </h3>
                        {
                            eventData.price && (
                                <p class="text-white font-bold text-base flex items-center gap-3">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="w-5 h-5 text-gray-300"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <line x1="12" y1="1" x2="12" y2="23" />
                                        <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6" />
                                    </svg>
                                    {eventData.price.name}
                                </p>
                            )
                        }
                    </div>
                </div>

                {/* Actions */}
                {
                    eventData.schedule_pdf_url && (
                        <a
                            href={eventData.schedule_pdf_url}
                            target="_blank"
                            class="block w-full py-4 bg-[#00c54f] hover:bg-[#00e05a] text-white text-center text-sm font-bold uppercase tracking-widest transition-colors shadow-sm"
                        >
                            Download Program
                        </a>
                    )
                }
            </div>
        </div>
    </div>
</SocialLayout>
