---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
    title: string;
    description?: string;
    hideRightSidebar?: boolean;
    image?: string;
    type?: "website" | "article" | "video.other";
}

const {
    title,
    description = "Zvenia - Community for Mining Professionals",
    hideRightSidebar = false,
    image = "/share-default.png",
    type = "website",
} = Astro.props;

const canonicalURL = new URL(
    Astro.url.pathname,
    Astro.site || "https://zvenia.com",
);
const socialImageURL = new URL(image, Astro.site || "https://zvenia.com");
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <meta name="generator" content={Astro.generator} />

        <!-- Primary Meta Tags -->
        <title>{title}</title>
        <meta name="title" content={title} />
        <meta name="description" content={description} />
        <link rel="canonical" href={canonicalURL} />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content={type} />
        <meta property="og:url" content={canonicalURL} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={socialImageURL} />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={canonicalURL} />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content={socialImageURL} />

        <!-- Fonts: Outfit -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
            rel="stylesheet"
        />

        <!-- Material Icons -->
        <link
            href="https://fonts.googleapis.com/icon?family=Material+Icons"
            rel="stylesheet"
        />
    </head>
    <body
        class="bg-(--bg-body) min-h-screen font-sans selection:bg-primary-500 selection:text-white"
    >
        <!-- Fixed Header -->
        <Header />

        <!-- LEFT SIDEBAR (Fixed, starts below header/brand) -->
        <aside
            class="hidden lg:block fixed left-0 top-[70px] bottom-0 w-[270px] z-998 bg-(--bg-surface) overflow-y-auto no-scrollbar border-r border-[#e5e7eb]"
        >
            <slot name="left-sidebar" />
        </aside>

        <!-- RIGHT SIDEBAR (Fixed, starts below header) -->
        {
            !hideRightSidebar && (
                <aside class="hidden lg:block fixed right-0 top-[70px] bottom-0 w-[300px] z-998 bg-(--bg-surface) overflow-y-auto no-scrollbar border-l border-[#e5e7eb] px-4 py-4">
                    <slot name="right-sidebar" />
                </aside>
            )
        }

        <!-- MAIN CONTENT (Fluid center, pushed by sidebars) -->
        <div
            class={`w-full min-h-screen bg-(--bg-surface) pt-[70px] lg:pl-[270px] ${hideRightSidebar ? "" : "lg:pr-[300px]"}`}
        >
            <!-- Inner Content Container -->
            <main
                class="w-full min-h-full border-x border-(--border-color) py-6"
                style="background-color: #f3f3f3;"
            >
                <div class="w-full max-w-[98%] mx-auto">
                    <slot />
                </div>
            </main>

            <!-- Footer might need to be inside main or hidden if we want infinite scroll feel, putting it here for now -->
            <Footer />
        </div>
    </body>
</html>

<style>
    /* Hide scrollbar for Chrome, Safari and Opera */
    .no-scrollbar::-webkit-scrollbar {
        display: none;
    }
    /* Hide scrollbar for IE, Edge and Firefox */
    .no-scrollbar {
        -ms-overflow-style: none; /* IE and Edge */
        scrollbar-width: none; /* Firefox */
    }
    /* Force Grid Layout */
    .social-layout-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
        position: relative;
    }
    @media (min-width: 1024px) {
        .social-layout-grid {
            grid-template-columns: 270px 1fr 320px !important;
        }
    }
</style>
