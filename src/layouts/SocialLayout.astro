---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
	title: string;
    description?: string;
}

const { title, description = "Zvenia - Community for Mining Professionals" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
        <meta name="description" content={description} />
		<title>{title}</title>

        <!-- Fonts: Outfit -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

	</head>
	<body class="bg-[var(--bg-body)] min-h-screen font-sans selection:bg-primary-500 selection:text-white">
        <!-- Fixed Header -->
		<Header />

        <div class="pt-20 pb-12 px-4 sm:px-6 lg:px-8 w-full mx-auto">
            <div class="social-layout-grid">
                
                <!-- LEFT COLUMN (Sticky Sidebar) -->
                <!-- Hidden on mobile, visible on LG screens -->
                <aside class="hidden lg:block sticky top-20 h-[calc(100vh-8rem)] overflow-y-auto no-scrollbar">
                    <slot name="left-sidebar" />
                </aside>

                <!-- CENTER COLUMN (Feed) -->
                <main class="min-h-screen min-w-0">
            		<slot />
                </main>

                <!-- RIGHT COLUMN (Sticky Widgets) -->
                <aside class="hidden lg:block sticky top-20 h-[calc(100vh-8rem)] overflow-y-auto no-scrollbar">
                    <slot name="right-sidebar" />
                </aside>
                
            </div>
        </div>

        <!-- Footer only on bottom, arguably invisible in infinite scroll, but good to have -->
        <Footer />
	</body>
</html>

<style>
    /* Hide scrollbar for Chrome, Safari and Opera */
    .no-scrollbar::-webkit-scrollbar {
        display: none;
    }
    /* Hide scrollbar for IE, Edge and Firefox */
    .no-scrollbar {
        -ms-overflow-style: none;  /* IE and Edge */
        scrollbar-width: none;  /* Firefox */
    }
    /* Force Grid Layout */
    .social-layout-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
        position: relative;
    }
    @media (min-width: 1024px) {
        .social-layout-grid {
            grid-template-columns: 280px 1fr 320px !important;
        }
    }
</style>
