---
const currentYear = new Date().getFullYear();
---

<footer class="w-full" style="background-color: #0d241b;">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- 3 Columnas principales -->
    <div class="flex flex-col md:flex-row gap-12 mb-8">
      <!-- Columna 1: ZVENIA -->
      <div class="flex-1">
        <ul class="space-y-3">
          <li>
            <a
              href="/"
              class="text-white hover:text-accent-500 transition-colors text-sm font-medium"
            >
              ZVENIA
            </a>
          </li>
          <li>
            <a
              href="/"
              class="text-white hover:text-accent-500 transition-colors text-sm font-medium"
            >
              ZVENIA MINING
            </a>
          </li>
          <li>
            <a
              href="/expert-center"
              class="text-white hover:text-accent-500 transition-colors text-sm font-medium"
            >
              EXPERT CENTER
            </a>
          </li>
          <li>
            <a
              href="/z-toolkit"
              class="text-white hover:text-accent-500 transition-colors text-sm font-medium"
            >
              Z-TOOLKIT
            </a>
          </li>
        </ul>
      </div>

      <!-- Columna 2: Content -->
      <div class="flex-1">
        <ul class="space-y-3">
          <li>
            <a
              href="/posts"
              class="text-[#00c54f] hover:text-white transition-colors text-sm font-medium"
            >
              POSTS
            </a>
          </li>
          <li>
            <a
              href="/podcasts"
              class="text-white hover:text-white transition-colors text-sm font-medium"
            >
              PODCASTS
            </a>
          </li>
          <li>
            <a
              href="/notes"
              class="text-white hover:text-accent-500 transition-colors text-sm font-medium"
            >
              NOTES
            </a>
          </li>
          <li>
            <a
              href="/events"
              class="text-white hover:text-white transition-colors text-sm font-medium"
            >
              EVENTS
            </a>
          </li>
          <li>
            <a
              href="/services"
              class="text-white hover:text-accent-500 transition-colors text-sm font-medium"
            >
              SERVICES
            </a>
          </li>
        </ul>
      </div>

      <!-- Columna 3: Community -->
      <div class="flex-1">
        <ul class="space-y-3">
          <li>
            <a
              href="/country-managers"
              class="text-white hover:text-accent-500 transition-colors text-sm font-medium"
            >
              COUNTRY MANAGERS
            </a>
          </li>
          <li>
            <a
              href="/z-talks"
              class="text-white hover:text-accent-500 transition-colors text-sm font-medium"
            >
              Z-TALKS
            </a>
          </li>
          <li>
            <a
              href="/press-and-media"
              class="text-white hover:text-white transition-colors text-sm font-medium"
            >
              Press and Media
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Divider y sección inferior -->
    <div class="border-t border-white/20 pt-8 mt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-6">
        <!-- Redes Sociales -->
        <div class="flex items-center gap-4">
          <!-- LinkedIn -->
          <a
            href="https://www.linkedin.com/company/zvenia/"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 bg-white/10 hover:bg-white/20 rounded-lg flex items-center justify-center transition-colors"
            aria-label="LinkedIn"
          >
            <svg
              class="w-5 h-5 text-white"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
              ></path>
            </svg>
          </a>

          <!-- YouTube -->
          <a
            href="https://www.youtube.com/@zvenia-platform"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 bg-white/10 hover:bg-white/20 rounded-lg flex items-center justify-center transition-colors"
            aria-label="YouTube"
          >
            <svg
              class="w-5 h-5 text-white"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
              ></path>
            </svg>
          </a>

          <!-- Linktr -->
          <a
            href="https://linktr.ee/zvenia"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 bg-white/10 hover:bg-white/20 rounded-lg flex items-center justify-center transition-colors"
            aria-label="Linktree"
          >
            <svg
              class="w-5 h-5 text-white"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                d="M13.091 2.481c1.712.603 3.352 1.293 4.948 2.044a.995.995 0 0 1 .738.949v9.3a6.96 6.96 0 0 1-1.024 3.618 6.99 6.99 0 0 1-2.93 2.688 6.979 6.979 0 0 1-3.782.96 6.9 6.9 0 0 1-1.855-.24 6.932 6.932 0 0 1-3.26-1.86A6.868 6.868 0 0 1 4.2 15.6a6.9 6.9 0 0 1-.24-1.855 6.932 6.932 0 0 1 1.86-3.26c.6-.6 1.32-1.08 2.1-1.44a6.928 6.928 0 0 1 2.688-.54h.18V4.98a.99.99 0 0 1 .638-.949c1.6-.75 3.24-1.44 4.95-2.044a.976.976 0 0 1 .675.01zm-1.821 4.99v3.12H8.25a4.488 4.488 0 0 0-2.25.6 4.527 4.527 0 0 0-1.59 1.59c-.38.6-.6 1.26-.6 2.04 0 .78.22 1.44.6 2.04.38.6.9 1.08 1.59 1.5a4.34 4.34 0 0 0 2.25.6 4.488 4.488 0 0 0 2.25-.6 4.527 4.527 0 0 0 1.59-1.59c.38-.6.6-1.26.6-2.04V7.47zm1.86-3.24c-1.2.3-2.34.66-3.42 1.08v1.14h3.42V4.22zm4.5 1.14c-1.08-.42-2.22-.78-3.42-1.08v1.14h3.42V5.36z"
              ></path>
            </svg>
          </a>
        </div>

        <!-- Copyright -->
        <p class="text-white/80 text-sm">
          ZVENIA © {currentYear} All Rights Reserved.
        </p>
      </div>
    </div>
  </div>
</footer>
