import { createSupabaseServerClient } from "../../lib/supabase";
import CreateContentModal from "../dashboard/CreateContentModal";
import PostCard from "./PostCard.astro";
import PodcastRow from "./PodcastRow";
import EventCard from "./EventCard";
import ServiceCard from "./ServiceCard";
import UserCard from "./UserCard";
import ADSManagerWrapper from "../dashboard/ADSManagerWrapper";
import CountryManagerCard from "./CountryManagerCard";

// ... (existing imports)

const { filter = "popular" } = Astro.props; // 'popular' | 'saved'

// 1. Get Feed Type & Search Query
const feedType = Astro.url.searchParams.get("feed") || "post";
const searchQuery = Astro.url.searchParams.get("q") || "";
const isMyZvenia = Astro.url.pathname.includes("my-zvenia");

// 2. Fetch User Saved Items (if logged in)
const currentUser = Astro.locals.user;
let savedItemIds = new Set<string>();

// Use shared Supabase client from middleware which has verified session
const { supabase } = Astro.locals;

// ... (saved items logic remains, just ensure we use 'searchQuery' in queries below)

// 3. Polymorphic Fetching
let data: any[] = [];
let error = null;

if (
    filter === "saved" &&
    savedItemIds.size === 0 &&
    feedType !== "cm" &&
    !searchQuery
) {
    data = [];
} else {
    if (feedType === "post") {
        let query = supabase
            .from("posts")
            .select(
                `*, author:profiles(full_name, avatar_url, profession, company, profile_slug), topic:topics(name, slug)`,
            );

        if (filter === "saved") {
            query = query.in("id", Array.from(savedItemIds));
        } else {
            // Only apply popular filter if NO search is active
            if (!searchQuery) {
                query = query.eq("is_popular", true);
            }
        }

        if (searchQuery) {
            query = query.ilike("content", `%${searchQuery}%`);
        }

        const { data: posts, error: err } = await query
            .order("published_at", { ascending: false })
            .limit(20);
        data = posts || [];
        error = err;
    } else if (feedType === "event") {
        const now = new Date().toISOString();
        let query = supabase.from("events").select("*");

        if (filter === "saved") {
            query = query.in("id", Array.from(savedItemIds));
        } else {
            if (!searchQuery) {
                query = query
                    .eq("is_popular", true)
                    .or(`end_date.gte.${now},start_date.gte.${now}`);
            }
        }

        if (searchQuery) {
            query = query.ilike("title", `%${searchQuery}%`);
        }

        const { data: events, error: err } = await query
            .order("created_at", { ascending: false })
            .limit(50);
        data = events || [];
        error = err;
    } else if (feedType === "podcast") {
        let query = supabase.from("podcasts").select("*");

        if (filter === "saved") {
            query = query.in("id", Array.from(savedItemIds));
        } else {
            if (!searchQuery) {
                query = query.eq("is_popular", true);
            }
        }

        if (searchQuery) {
            query = query.ilike("title", `%${searchQuery}%`);
        }

        const { data: podcasts, error: err } = await query
            .order("created_at", { ascending: false })
            .limit(20);
        data = podcasts || [];
        error = err;
    } else if (feedType === "service") {
        let query = supabase.from("services").select("*");

        if (filter === "saved") {
            query = query.in("id", Array.from(savedItemIds));
        } else {
            if (!searchQuery) {
                query = query.eq("is_popular", true);
            }
        }

        if (searchQuery) {
            query = query.ilike("title", `%${searchQuery}%`);
        }

        const { data: services, error: err } = await query
            .order("created_at", { ascending: false })
            .limit(20);
        data = services || [];
        error = err;
    } else if (feedType === "ads") {
        // Handled by client-side
        data = [];
    } else if (feedType === "cm") {
        let query = supabase
            .from("profiles")
            .select("*")
            .eq("role", "CountryManager");

        if (searchQuery) {
            query = query.ilike("full_name", `%${searchQuery}%`);
        }

        const { data: managers, error: err } = await query.limit(50);

        // Resolve Country IDs to Names for legacy data
        if (managers && managers.length > 0) {
            const managersArray = managers as any[];
            // Check if any manager has a numeric country
            const hasNumericCountry = managersArray.some((m) => {
                const c = m.work_country || m.country;
                return c && !isNaN(Number(c));
            });

            if (hasNumericCountry) {
                const { data: countries } = await supabase
                    .from("countries")
                    .select("id, name, display_name");

                if (countries) {
                    const countryMap = new Map();
                    countries.forEach((c: any) => {
                        // Map ID to Display Name (fallback to Name)
                        countryMap.set(String(c.id), c.display_name || c.name);
                    });

                    data = managersArray.map((m) => {
                        const rawWork = m.work_country;
                        const rawCountry = m.country;

                        let newWork = rawWork;
                        let newCountry = rawCountry;

                        // Resolve work_country
                        if (rawWork && !isNaN(Number(rawWork))) {
                            const mapped = countryMap.get(String(rawWork));
                            if (mapped) newWork = mapped;
                        }

                        // Resolve country
                        if (rawCountry && !isNaN(Number(rawCountry))) {
                            const mapped = countryMap.get(String(rawCountry));
                            if (mapped) newCountry = mapped;
                        }

                        return {
                            ...m,
                            work_country: newWork,
                            country: newCountry,
                        };
                    });
                } else {
                    data = managersArray;
                }
            } else {
                data = managersArray;
            }
        } else {
            data = [];
        }

        error = err;
    }
}

if (error) {
    console.error(`Error fetching ${feedType} feed:`, error);
}

// Helper: Date Format
const formatDate = (dateStr: string | null) => {
    if (!dateStr) return "";
    return new Date(dateStr).toLocaleDateString("en-US", {
        month: "short",
        day: "numeric",
        year: "numeric",
    });
};
