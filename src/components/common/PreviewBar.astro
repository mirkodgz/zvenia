---
interface Props {
    hideRightSidebar?: boolean;
}

const { hideRightSidebar = false } = Astro.props;
---

<div
    class:list={[
        "fixed bottom-0 left-0 right-0 z-9990 bg-linear-to-r from-[#FCD34D] to-[#F59E0B] py-8 px-8 shadow-[0_-4px_6px_-1px_rgba(0,0,0,0.1)] border-t border-yellow-400",
        "lg:left-[270px]",
    ]}
>
    <div
        class="max-w-7xl mx-auto flex flex-col md:flex-row items-center justify-between gap-4"
    >
        <div class="text-left">
            <h3 class="text-black font-bold text-lg">
                Preview of ZVENIA Mining
            </h3>
            <p class="text-black/80 text-sm md:text-base">
                Sign up to get unlimited content. No credit card needed.
            </p>
        </div>
        <a
            href="/register"
            class="bg-white text-black font-bold hover:bg-gray-100 py-3 px-8 rounded-md shadow-sm transition-colors uppercase text-sm tracking-wide shrink-0"
        >
            Sign Up Free
        </a>
    </div>
</div>
